srcs = files(calendar.c easter.c);
objects = toolchain.c.compile(srcs);
library = toolchain.c.shared_library(objects, 'calendar', stage.usr.lib);

headers = toolchain.headers(files(calendar.h), stage.usr.include);

man = toolchain.man_page(
	src = file('calendar.3'),
	links = [
		'easterg' 'easterog' 'easteroj'
		'gdate' 'jdate' 'ndaysg' 'ndaysj'
		'week' 'weekday'
	]);
